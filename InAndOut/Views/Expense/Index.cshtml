@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
	<div class=" row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Expense List</h2>
		</div>
		<div class="col-6 text-right">
			<a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create New Expense</a>
			<a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Expense Category</a>

		</div>

	</div>

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						Expense Name
					</th>
					<th>
						Amount
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
				<tr>
					<td width="35%">@item.ExpenseName</td>
					<td width="35%">@item.Amount</td>
					<td width="30%">
						<div class="w-100 btn-group"role="group">
							<a class="btn btn-primary mx-1" asp-route-Id="@item.Id" asp-controller="Expense" asp-action="getUpdate">Update</a>
							<a class="btn btn-danger mx-1" asp-route-Id="@item.Id" asp-controller="Expense" asp-action="Delete">Delete</a>

						</div>
					</td>
				</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>You have No Expense</p>
	}

</div>