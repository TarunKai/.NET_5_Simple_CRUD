@model InAndOut.Models.Expense
@* If We use IEnumerable then nothing will be show in cshtml tag i.e. asp-for since it only gets
	single object and IEnumerable us use for getting bulk of variable at a time *@

<form method="post" asp-action="Create">
	<div class="container">
		<div asp-validation-summary="All" class="text-info"></div>
			<div class="row">
				<div class="col-md-12">
					<div class="form-group row">
						<div class="col-6">
							<label asp-for="ExpenseName"></label>
						</div>
						<div class="col-6">
							<label asp-for="Amount"></label>
						</div>


					</div>
					<div class="form-group row">
						<div class="col-6">
							<input asp-for="ExpenseName" class="form-control" />
							<span asp-validation-for="ExpenseName" class="text-danger"></span>
						</div>
						<div class="col-6">
							<input asp-for="Amount" class="form-control" />
							<span asp-validation-for="Amount" class="text-danger"></span>
						</div>


					</div>
				</div>
			</div>
		

	</div>


	<div class="form-group row">
		<div class="col-8 offset-2 row">
			<div class="col">
				<input type="submit" value="Create" class="btn btn-outline-primary w-75">
			</div>
			<div class="col">
				<a class="btn btn-outline-danger w-75" asp-action="Index">Back</a>
			</div>
		</div>
	</div>

</form>

@section scripts{ 
@{ <partial name="_ValidationScriptsPartial" />}
}