
@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to Item Index</h1>

@model IEnumerable<InAndOut.Models.Item>

<div class="container p-3">
	<div class=" row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Borrowed Item List</h2>
		</div>
		<div class="col-6 text-right">
			<a class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="Create" >Create New Item</a>
		</div>
		
	</div>

	@if (Model.Count()>0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						Item Name
					</th>
					<th>
						Borrower
					</th>
					<th>
						Lender
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{
					<tr>
						<td width="30%">@item.ItemName</td>
						<td width="30%">@item.Borrower</td>
						<td width="30%">@item.Lender</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No Item Created Yet</p>
	}

</div>