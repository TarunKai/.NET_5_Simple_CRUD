@model IEnumerable<InAndOut.Models.expenseCategory>

<div class="container p-3">
	<div class=" row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Expense List</h2>
		</div>
		<div class="col-6 text-right">
			<a class="btn btn-primary" asp-controller="ExpenseType" asp-action="expenseCtgry">Expense Category</a>

		</div>

	</div>

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						Expense Category
					</th>
					<th>
						Changes
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td width="35%">@item.Category</td>
						<td width="30%">
							<div class="w-100 btn-group" role="group">
								<a class="btn btn-primary mx-1" asp-route-Id="@item.Id" asp-controller="ExpenseType" asp-action="getUpdate">Update</a>
								<a class="btn btn-danger mx-1" asp-route-Id="@item.Id" asp-controller="ExpenseType" asp-action="Delete">Delete</a>

							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>You have No Expense</p>
	}

</div>